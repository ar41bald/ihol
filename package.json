{
  "name": "ihol",
  "version": "0.0.1",
  "description": "REST API service for keeping movies",
  "author": "ar41bald",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "npm run start:prod:heroku",
    "start:dev": "nodemon",
    "prestart:prod": "tsc",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "start:prod:heroku": "cross-env NODE_ENV=heroku node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:all": "yarn test && yarn test:e2e && yarn test:cov",
    "webpack": "webpack --config webpack.config.js",
    "heroku-postbuild": "npm install && npm run start"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@nestjs/common": "^6.9.0",
    "@nestjs/core": "^6.9.0",
    "@nestjs/platform-express": "^6.9.0",
    "@nestjs/typeorm": "^6.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/hapi__joi": "^16.0.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "dotenv": "^8.2.0",
    "fastify-formbody": "^2.0.0",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.7",
    "typescript": "^3.5.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.9.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "cross-env": "^6.0.3",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
